{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "rootDir": ".",                  
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "inlineSourceMap": true,
    "inlineSources": true
  },
  "include": [
    "src/**/*",   
    "prisma/**/*" 
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
